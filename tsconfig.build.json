{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext",
      "dom",
      "esnext.asynciterable"
    ],
    "strict": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "inlineSources": true
  },
  "include": [
    "index.tsx"
  ],
  "compileOnSave": true
}
